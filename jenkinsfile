pipeline {

  environment {
    dockerimagename = "chandu0108/chandu-devops-1"
    dockerImage = ""
  }

  agent any

  stages {

    stage('Checkout Source') {
      steps {
        git 'https://github.com/master-projects-theses/2024-fall-Venkata-Hemachandu-Gariganti.git'
      }
    }

    stage('Build image') {
      steps {
        script {
          dockerImage = docker.build dockerimagename
        }
      }
    }

    stage('Pushing Image') {
      environment {
        registryCredential = 'dockerhublogin' // Ensure this matches your Docker Hub credential ID in Jenkins
      }
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', registryCredential) {
            dockerImage.push("latest")
          }
        }
      }
    }

    stage('Deploying App to Kubernetes') {
      steps {
        withKubeConfig([credentialsId: 'kubernetes']) { // Replace 'kubernetes' with the ID of your uploaded secret file
          script {
            sh 'kubectl apply -f deployment.yml'
          }
        }
      }
    }

  }

  post {
    success {
      echo 'Pipeline completed successfully.'
    }
    failure {
      echo 'Pipeline failed.'
    }
  }

}

